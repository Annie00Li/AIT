<div class="topics Login" style="left: 45%;">Register</div>
{{#if message}}
<div class="error" style="top: 90vh; left: 40%;">{{ message }}</div>
{{/if}}
<form method="POST" action="/register">
	<div class="login chat_name_text" style="width: 20%; left: 40%; font-size: 24px;">
		<label for="username">Username:</label>
		<input class="topic_header" type="text" name="username" value="">
	</div>
	<div class="login chat_name_text" style="width: 20%; left: 40%; font-size: 24px;">
		<label for="email">Email:</label> 
		<input class="topic_header" type="email" name="email" value="">
	</div>
	<div class="login chat_name_text" style="width: 20%; left: 40%; font-size: 24px;">
		<label for="password">Password:</label>
		<input class="topic_header" type="password" name="password" value="">
	</div>
	<div><input class="loginBtn" style="width: 16%; left: 42%; top: 80vh; background-color: #F58F18;" type="submit" value="Register"></div>
</form>
